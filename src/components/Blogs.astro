---
const posts = await Astro.glob("../posts/*.md");
---

<section class="my-10">
  <div class="text-center flex flex-col gap-4">
    <h4 class="text-3xl font-bold">Astro Blog</h4>
    <p>A simple blog built with astro . no javascript</p>
  </div>
  <div class="grid md:grid-cols-2 lg:grid-cols-3">
    {
      posts?.map((post) => (
        <div class="p-4 flex flex-col gap-3">
          <h4 class="text-xl font-semibold">{post?.frontmatter.title}</h4>
          <p class="break-all">{post?.frontmatter.excerpt}</p>
          <button class="px-6 rounded-md hover:bg-zinc-700 hover:text-zinc-50 transition-all duration-300 py-2 border bg-zinc-200 shadow w-fit">
            <a href={`/${post?.frontmatter.slug}`}>
                Read More
                </a>
            </button>
        </div>
      ))
    }
  </div>
</section>
